{
  "editor.fontSize": 14,
  "explorer.compactFolders": false,
  "python.languageServer": "Pylance", // ms-python.vscode-pylance
  "editor.rulers": [80, 120],
  "python.testing.unittestEnabled": false, // ms-python.python
  "python.testing.pytestEnabled": true,
  "python.testing.pytestArgs": [], // -x to bail
  "python.linting.flake8Enabled": true,
  "python.linting.mypyEnabled": true,
  //"python.analysis.typeCheckingMode": "basic",
  "python.analysis.typeCheckingMode": "off",
  "python.linting.pylintArgs": [
    "--load-plugins=pylint_django",
    "--errors-only"
  ],
  "python.formatting.autopep8Args": [
    "--indent-size=4",
    "--max-line-length=80"
  ],
  "python.defaultInterpreterPath": "./venv/Scripts/python",
  "[python]": {
    "editor.defaultFormatter": "ms-python.autopep8", // ms-python.python
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": true,
      "source.fixAll.unusedImports": true,
      "source.organizeImports": true
    },
    "editor.formatOnType": true
  },
  "[html]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "vscode.html-language-features",
    "editor.quickSuggestions": {
      "other": true,
      "comments": true,
      "strings": true
    }
  },
  "[django-html]": {
    "editor.formatOnSave": false,
    "editor.defaultFormatter": "vscode.html-language-features",
    "editor.quickSuggestions": {
      "other": true,
      "comments": true,
      "strings": true
    }
  },
  "files.associations": {
    "*.js": "javascript",
    "*.jsx": "javascriptreact",
    "*.xml": "html",
    "*.svg": "html",
    "*.html": "html",
    "django-html": "html", // batisteo.vscode-django
    "**/*.html": "html",
    "**/templates/**/*.html": "django-html",
    "**/base_templates/**/*.html": "django-html",
    "**/requirements{/**,*}.{txt,in}": "pip-requirements"
  },
  "emmet.includeLanguages": {
    "django-html": "html", // batisteo.vscode-django
    "javascript": "javascriptreact",
    "typescript": "typescriptreact"
  },
  "workbench.colorTheme": "OM Theme (Night Owl Italic)",
  "workbench.iconTheme": "material-icon-theme",
  "git.confirmSync": false,
  "git.autofetch": true,
  "window.zoomLevel": 0,
  "code-runner.clearPreviousOutput": true,
  "code-runner.ignoreSelection": true,
  "code-runner.runInTerminal": true,
  "code-runner.executorMap": {
    //"python": "./venv/Scripts/Activate.ps1",
    "python": "python",
    "php": "php",
    "powershell": "powershell -ExecutionPolicy ByPass -File",
    "bat": "cmd /c",
    "shellscript": "bash",
  },
  "workbench.startupEditor": "none",
  "python.formatting.provider": "none"
}